#:import get_color_from_hex kivy.utils.get_color_from_hex

<Dungeon>

<Label>
#    canvas.before:
#        Color:
#            rgba: get_color_from_hex('E2DDD5')
#        Rectangle:
#            pos: self.pos
#            size: self.size
    image: image
    Image:
        id: image
        source: 'assets/trans.png'
        center: self.parent.center
        size_hint: None, None
        size: self.parent.size[0], self.parent.size[1]
        allow_stretch: True
    
<DungeonGame>
    dungeon: dungeon
    stats: stats
    cols: 2
    rows: 1
    spacing: 5, 0

    BoxLayout:
        size_hint: .8, 1
        ScatterLayout:
            Dungeon:
                id: dungeon
                cols: 20
                rows: 20
                padding: 0, 0, 0, 0

        # Part of the maze will be displayed here

    GridLayout:
        id: stats
        cols: 2
        rows: 5
        size_hint: .2, 1
        level: level
        
        Label:
            text: "Level"
            text_size: self.width, None
            color: get_color_from_hex('5BBEE5')
            halign: 'left'
        Label:
            id: level
            text: "1"
            text_size: self.width, None
            color: get_color_from_hex('5BBEE5')
            halign: 'left'